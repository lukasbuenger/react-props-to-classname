{
  "compilerOptions": {
    "target": "es2020",
    "jsx": "react-jsx",                                   
    "moduleResolution": "Node", 
    "module": "CommonJS", 
    "noEmit": true,                               
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,  
    "declaration": true,
    "skipLibCheck": true,
  },
  "include": ["./src"],
  "exclude": ["./docs"],
}
